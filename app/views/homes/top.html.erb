<div class="container" >
  
  <%= image_tag "line_212190650678320 (2).jpg", width: '100%', height: '300' %>
  
  <table class = "table table-bordered">
      <thead class="table-dark">
        <tr>
          <th class = "text-center"><%= link_to "ホーム", root_path, :style=>"color:white;" %></th>
          <th class = "text-center"><%= link_to "スマートフォン", homes_path(category_id:2), :style=>"color:white;" %></th>
          <th class = "text-center"><%= link_to "パソコン", homes_path(category_id:1), :style=>"color:white;" %></th>
          <th class = "text-center"><%= link_to "イヤホン", homes_path(category_id:3), :style=>"color:white;" %></th>
          <th class = "text-center"><%= link_to "周辺機器", homes_path(category_id:4), :style=>"color:white;" %></th>
          <th class = "text-center">
              <%= form_with url: homes_path, method: :get, local: true do |f| %>
                <%= f.collection_select(:category_id, Category.all, :id, :name ) %>
                <%= f.submit '検索', class: 'btn btn-secondary btn-sm' %>
              <% end %>
          </th>
        </tr>
  　　</thead>
  </table>
  
  <table class = "table">
    <tbody>
      <% @search_articles.each do |article| %>
        <tr>
          <td>
            <%= link_to article_path(article.id) do %>
              <%= attachment_image_tag article, :image, size: "150x120" %>
            <% end %>
          </td>
          <td>
            <div class="p-1 col-2 bg-secondary text-white text-center"><%= article.category.name %></div>
            <h3><%= link_to article.title, article, :style=>"color:black;" %></h3>
            <i class="far fa-clock"><%= article.created_at.strftime('%Y/%m/%d') %></i> 
            <i class="fa fa-history"><%= article.updated_at.strftime('%Y/%m/%d') %></i>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  

</div>

