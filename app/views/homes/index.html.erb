<div class = "container">
  <div class = "row">
    <div class = "col-2 my-5 title" >
      <% if @category==0 %>
        <h4 class = "" >カテゴリ一覧</h4>
      <% else %>
        <h4>「<%= @category.name %>」一覧</h4>
      <% end %>
    </div>

    <div class = "col-2 my-5" >
      <p>(全<%= @article_amount %>件)</p>
    </div>
    
    <div class="col-3 offset-5 my-5 search-form">
      <%= form_with url: homes_path, method: :get, local: true do |f| %>
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
  
  <table>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <%= link_to article_path(article.id) do %>
              <%= attachment_image_tag article, :image, size: "150x120" %>
            <% end %>
          </td>
          <td><h3><%= link_to article.title, article, :style=>"color:black;" %></h3></td>
          <td class = "align-middle"><%= article.category.name %></td>
          <td class = "align-middle">
            Create<br><%= article.created_at.strftime('%Y/%m/%d') %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

</div>