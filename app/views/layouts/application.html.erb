<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    
    <% if admin_signed_in? %>
      <li class="nav-item">
        <%= link_to "新規作成", new_article_path, class: 'nav-link text-light' %>
      </li>
      <li class="nav-item">
        <%= link_to "記事", articles_path, class: 'nav-link text-light' %>
      </li>
      <li class="nav-item">
        <%= link_to "カテゴリ", categories_path, class: 'nav-link text-light' %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_admin_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_admin_session_path %>
      </li>
    <% end %>
    
    <%= yield %>
  </body>
</html>
