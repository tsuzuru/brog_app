<p id="notice"><%= notice %></p>

<div class = "container">

      <h1>Categories</h1><br>

      <%= form_with model: @category, url: categories_path, local:true do |f| %>

      <table>
        <tr>
          <th><%= f.label :Category %></th>
          <td>&emsp;&emsp;<%= f.text_field :name %></td>
          <td>&emsp;&emsp;<%= f.submit ' 新規登録  ', class: 'btn btn-secondary' %></td>
        </tr>
      <% end %>
    </div>
      </table>

      <br>

    <table class = "table table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
  　　</thead>
      <tbody>
        <tr>
          <% @categories.each do |category| %>
        <tr>
          <th><%= category.name %></th>
          <th><%= link_to "編集する", edit_category_path(category), :style=>"color:white;", class: 'btn btn-secondary' %></th>
        </tr>
          <% end %>
      </tbody>
    </table>
</div>