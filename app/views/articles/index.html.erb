<p id="notice"><%= notice %></p>

<div class="container">
  
  <h1>Articles</h1>

<table class = "table">
      <thead class="table-secondary">
  <thead class="table-secondary">
    <tr>
      <th>Post</th>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @search_articles.each do |article| %>
      <tr>
        <td><%= attachment_image_tag article, :image, size: "100x70" %></td>
        <td class = "align-middle"><%= article.title %></td>
        <td class = "align-middle"><%= truncate(article.body) %></td>
        <td class = "align-middle"><%= article.category.name %></td>
        <td class = "align-middle">
          Create<br><%= article.created_at.strftime('%Y/%m/%d') %><br>
          Update<br><%= article.updated_at.strftime('%Y/%m/%d') %>
        </td>
        <td class = "align-middle"><%= link_to 'Show', article %></td>
        <td class = "align-middle"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class = "align-middle"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>

</div>